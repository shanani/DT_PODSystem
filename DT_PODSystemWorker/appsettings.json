{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=ED.DocManager;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True"
  },
  "WorkerSettings": {
    "RootFolderPath": "C:\\Users\\engsh\\Documents\\PDFs\\ToProcess",
    "ProcessedFolderPath": "C:\\Users\\engsh\\Documents\\PDFs\\Processed",
    "ErrorFolderPath": "C:\\Users\\engsh\\Documents\\PDFs\\Errors",
    "ProcessingIntervalMinutes": 1,
    "MaxConcurrentFiles": 10,
    "SupportedExtensions": [ ".pdf" ],
    "MaxFileSizeMB": 50
  },
  "FileOrganization": {
    "CreateCategoryFolders": true,
    "CreateVendorFolders": true,
    "CreateMonthlyFolders": true,
    "FolderStructure": "{Category}/{Vendor}/{PeriodId}"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/worker-all-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}",
          "fileSizeLimitBytes": 104857600,
          "rollOnFileSizeLimit": true
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/extraction-debug-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 15,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] {Level:u3} | {Message:lj}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Debug",
          "fileSizeLimitBytes": 52428800,
          "rollOnFileSizeLimit": true
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/formula-calculation-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 15,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] {Level:u3} | {Message:lj}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Debug",
          "fileSizeLimitBytes": 52428800,
          "rollOnFileSizeLimit": true
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/anchor-calibration-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 15,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] ANCHOR | {Message:lj}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Debug",
          "fileSizeLimitBytes": 26214400,
          "rollOnFileSizeLimit": true
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/coordinate-mapping-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 15,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] COORD | {Message:lj}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Debug",
          "fileSizeLimitBytes": 26214400,
          "rollOnFileSizeLimit": true
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/errors-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 60,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Error",
          "fileSizeLimitBytes": 104857600,
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  }
}