@model DT_PODSystem.Areas.Security.Models.ViewModels.ErrorPageViewModel
@{
    Layout = null; // Standalone page - no layout dependencies
    var statusCode = Model?.StatusCode ?? 403;
    var title = Model?.Title ?? "Access Denied";
    var message = Model?.Message ?? "You don't have permission to access this resource";
    var description = Model?.Description ?? "This area is restricted and requires special authorization.";
    var icon = Model?.Icon ?? "fas fa-shield-alt";
    var homePage = Model?.HomePage ?? "/";
    var loginPage = Model?.LoginPage ?? "/Security/Account/Login";
    var isAuthenticated = Model?.IsAuthenticated ?? false;
    var requiresAdmin = Model?.RequiresAdmin ?? false;
    var requiresSuperAdmin = Model?.RequiresSuperAdmin ?? false;
    var supportEmail = Model?.SupportEmail;
    var supportPhone = Model?.SupportPhone;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@statusCode - @title | ED Landing Page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content="noindex, nofollow" />

    <!-- Core CSS -->
    <link href="~/fonts/fonts.css" rel="stylesheet" />
    <link href="https://ops_cdn.stc.com.sa/ca/css/vendor.min.css" rel="stylesheet" />
    <link href="https://ops_cdn.stc.com.sa/ca/css/material/app.min.css" rel="stylesheet" />
    <link href="~/site/theme.css" rel="stylesheet" />
    <link href="~/site/main.css" rel="stylesheet" />

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow: hidden;
        }

        .access-denied-page {
            height: 100vh;
            width: 100vw;
            background: linear-gradient(135deg, #dc3545 0%, #b02a37 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
        }

            .access-denied-page::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="security" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="20" cy="20" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="80" r="1.5" fill="rgba(255,255,255,0.08)"/></pattern></defs><rect width="100" height="100" fill="url(%23security)"/></svg>') repeat;
                opacity: 0.3;
                animation: securityFloat 25s ease-in-out infinite;
            }

        @@keyframes securityFloat {
            0%, 100% {
                transform: translateX(0px) translateY(0px);
            }

            50% {
                transform: translateX(5px) translateY(-5px);
            }
        }

        .access-denied-container {
            text-align: center;
            color: white;
            z-index: 10;
            position: relative;
            width: 100%;
            max-width: 400px;
            padding: 15px;
        }

        .access-denied-icon {
            font-size: 2.5rem;
            margin-bottom: 10px;
            opacity: 0.95;
            animation: pulse 2s ease-in-out infinite;
            color: #ffeb3b;
        }

        @@keyframes pulse {
            0%, 100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }
        }

        .access-code {
            font-size: 3.5rem;
            font-weight: 900;
            line-height: 1;
            margin-bottom: 10px;
            background: linear-gradient(45deg, #fff, rgba(255,255,255,0.8));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .access-denied-title {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 8px;
        }

        .access-denied-message {
            font-size: 0.95rem;
            margin-bottom: 6px;
            opacity: 0.95;
        }

        .access-denied-description {
            font-size: 0.85rem;
            opacity: 0.85;
            margin-bottom: 15px;
            line-height: 1.3;
        }

        .warning-box {
            background: rgba(255, 235, 59, 0.15);
            border: 1px solid rgba(255, 235, 59, 0.3);
            border-radius: 6px;
            padding: 10px;
            margin: 12px 0;
            font-size: 0.8rem;
        }

        .warning-text {
            opacity: 0.9;
            line-height: 1.2;
        }

        .action-buttons {
            display: flex;
            gap: 8px;
            justify-content: center;
            flex-wrap: wrap;
            margin: 15px 0;
        }

        .btn-custom {
            padding: 6px 16px;
            border-radius: 20px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 4px;
            font-size: 0.8rem;
            min-width: 70px;
        }

        .btn-primary-custom {
            background: rgba(255,255,255,0.9);
            color: #dc3545;
        }

            .btn-primary-custom:hover {
                transform: translateY(-1px);
                color: #dc3545;
            }

        .btn-outline-custom {
            background: transparent;
            color: white;
            border: 1px solid rgba(255,255,255,0.5);
        }

            .btn-outline-custom:hover {
                background: rgba(255,255,255,0.1);
                color: white;
                transform: translateY(-1px);
            }

        .btn-login-custom {
            background: linear-gradient(45deg, #28a745, #20c997);
            color: white;
        }

            .btn-login-custom:hover {
                transform: translateY(-1px);
                color: white;
            }

        .contact-info {
            margin-top: 12px;
            padding-top: 12px;
            border-top: 1px solid rgba(255,255,255,0.2);
            font-size: 0.75rem;
        }

        .contact-methods {
            display: flex;
            gap: 8px;
            justify-content: center;
            margin-top: 8px;
        }

        .contact-method {
            color: rgba(255,255,255,0.8);
            text-decoration: none;
            padding: 4px 8px;
            border-radius: 4px;
            background: rgba(255,255,255,0.1);
            transition: all 0.3s ease;
            font-size: 0.7rem;
        }

            .contact-method:hover {
                color: white;
                background: rgba(255,255,255,0.2);
            }

        /* Mobile responsiveness */
        @@media (max-width: 768px) {
            .access-denied-container {
                max-width: 350px;
                padding: 12px;
            }

            .access-code {
                font-size: 2.8rem;
            }

            .access-denied-title {
                font-size: 1.3rem;
            }

            .action-buttons {
                flex-direction: column;
                align-items: center;
                gap: 6px;
            }

            .btn-custom {
                width: 120px;
                justify-content: center;
            }
        }

        @@media (max-width: 480px) {
            .access-denied-container {
                max-width: 300px;
                padding: 10px;
            }

            .access-code {
                font-size: 2.5rem;
            }

            .access-denied-title {
                font-size: 1.2rem;
            }

            .access-denied-icon {
                font-size: 2rem;
                margin-bottom: 8px;
            }

            .warning-box {
                padding: 8px;
                margin: 10px 0;
            }

            .btn-custom {
                width: 100px;
                padding: 5px 12px;
                font-size: 0.75rem;
            }
        }
    </style>
</head>
<body>
    <div class="access-denied-page">
        <div class="access-denied-container">
            <!-- Access Denied Icon -->
            <div class="access-denied-icon">
                <i class="@icon"></i>
            </div>

            <!-- Access Code -->
            <div class="access-code">@statusCode</div>

            <!-- Access Denied Content -->
            <h1 class="access-denied-title">@title</h1>
            <div class="access-denied-message">@message</div>
            <div class="access-denied-description">@description</div>

            <!-- Warning Box -->
            <div class="warning-box">
                <div class="warning-text">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Security Notice:</strong> Access attempt logged.
                    @if (requiresAdmin || requiresSuperAdmin)
                    {
                        <span>Admin privileges required.</span>
                    }
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons">
                <a href="@homePage" class="btn-custom btn-primary-custom">
                    <i class="fas fa-home"></i>
                    Home
                </a>

                @if (!isAuthenticated)
                {
                    <a href="@loginPage" class="btn-custom btn-login-custom">
                        <i class="fas fa-sign-in-alt"></i>
                        Login
                    </a>
                }

                <button onclick="history.back()" class="btn-custom btn-outline-custom">
                    <i class="fas fa-arrow-left"></i>
                    Back
                </button>
            </div>

            <!-- Contact Information -->
            @if (!string.IsNullOrEmpty(supportEmail) || !string.IsNullOrEmpty(supportPhone))
            {
                <div class="contact-info">
                    <div style="margin-bottom: 4px;">Need help?</div>
                    <div class="contact-methods">
                        @if (!string.IsNullOrEmpty(supportEmail))
                        {
                            <a href="mailto:@supportEmail" class="contact-method">
                                <i class="fas fa-envelope"></i> Email
                            </a>
                        }
                        @if (!string.IsNullOrEmpty(supportPhone))
                        {
                            <a href="tel:@supportPhone" class="contact-method">
                                <i class="fas fa-phone"></i> Call
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>

    <script>
        // Add interactive feedback
        document.querySelectorAll('.btn-custom, .contact-method').forEach(element => {
            element.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-1px)';
            });

            element.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });
    </script>
</body>
</html>