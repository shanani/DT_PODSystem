        function loadFromJson(jsonData) {
            podData = { singleValues: {}, tables: {} };
            $('#single-values-container').empty();
            $('#tables-container').empty();
            $('#no-single-values').show();
            $('#no-tables').show();

            if (!Array.isArray(jsonData)) return;

            jsonData.forEach(item => {
                if (typeof item === 'string') {
                    addSingleValueFromData(item);
                } else if (typeof item === 'object') {
                    Object.keys(item).forEach(tableName => {
                        addTableFromData(tableName, item[tableName]);
                    });
                }
            });

            updateJsonPreview();
        }

