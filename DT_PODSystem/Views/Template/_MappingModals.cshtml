@model  TemplateFieldMappingViewModel


<!-- Single Field Modal for Add/Edit -->
<div class="modal fade" id="field-modal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="field-modal-title">Add New Field Mapping</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="field-form">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Field Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="field-name"
                                       placeholder="e.g., KPI_Value" required
                                       pattern="^[a-zA-Z_][a-zA-Z0-9_]*$"
                                       maxlength="50"
                                       title="Must start with letter, only letters/numbers/underscores allowed">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Description</label>
                                <textarea class="form-control" id="field-description" rows="3"
                                          placeholder="Optional description"></textarea>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="field-required">
                                <label class="form-check-label" for="field-required">Required Field</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Page Number</label>
                                <input type="number" class="form-control" id="field-page"
                                       min="1" value="1" readonly>
                            </div>
                            <div class="row mb-3" id="field-position-display">
                                <label class="form-label">Position & Size (Read-only)</label>
                                <div class="col-6">
                                    <input type="text" class="form-control" id="field-x"
                                           placeholder="X %" readonly>
                                </div>
                                <div class="col-6">
                                    <input type="text" class="form-control" id="field-y"
                                           placeholder="Y %" readonly>
                                </div>
                            </div>
                            <div class="row mb-3" id="field-size-display">
                                <div class="col-6">
                                    <input type="text" class="form-control" id="field-width"
                                           placeholder="Width %" readonly>
                                </div>
                                <div class="col-6">
                                    <input type="text" class="form-control" id="field-height"
                                           placeholder="Height %" readonly>
                                </div>
                            </div>
                            <div class="alert alert-info" id="field-edit-note" style="display: none;">
                                <small>
                                    <i class="fa fa-info-circle me-1"></i>
                                    <strong>Position & Size:</strong> Drag the field on the PDF to adjust position and size.
                                </small>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="save-field">
                    <i class="fa fa-save me-1"></i>Save Field
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Single Anchor Modal for Add/Edit -->
<div class="modal fade" id="anchor-modal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="anchor-modal-title">Add New Anchor Point</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="anchor-form">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Anchor Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="anchor-name"
                                       placeholder="e.g., Header_Logo" required
                                       pattern="^[a-zA-Z_][a-zA-Z0-9_]*$"
                                       maxlength="100"
                                       title="Must start with letter, only letters/numbers/underscores allowed">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Reference Text <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="anchor-reference-text"
                                       placeholder="Text to find in PDF" required
                                       maxlength="200"
                                       title="Exact text that appears in the PDF">
                                <small class="form-text text-muted">
                                    This text will be searched for coordinate calibration
                                </small>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Description</label>
                                <textarea class="form-control" id="anchor-description" rows="3"
                                          placeholder="Optional description" maxlength="300"></textarea>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Page Number</label>
                                <input type="number" class="form-control" id="anchor-page"
                                       min="1" value="1" readonly>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Search Tolerance (px)</label>
                                <input type="number" class="form-control" id="anchor-tolerance"
                                       min="1" max="100" value="10" step="1">
                                <small class="form-text text-muted">
                                    How precisely the text position must match
                                </small>
                            </div>
                            <div class="row mb-3" id="anchor-position-display" style="display: none;">
                                <label class="form-label">Position & Size (Read-only)</label>
                                <div class="col-6">
                                    <input type="text" class="form-control" id="anchor-x"
                                           placeholder="X px" readonly>
                                </div>
                                <div class="col-6">
                                    <input type="text" class="form-control" id="anchor-y"
                                           placeholder="Y px" readonly>
                                </div>
                            </div>
                            <div class="row mb-3" id="anchor-size-display" style="display: none;">
                                <div class="col-6">
                                    <input type="text" class="form-control" id="anchor-width"
                                           placeholder="Width px" readonly>
                                </div>
                                <div class="col-6">
                                    <input type="text" class="form-control" id="anchor-height"
                                           placeholder="Height px" readonly>
                                </div>
                            </div>
                            <div class="form-check mb-3">
                                <input type="checkbox" class="form-check-input" id="anchor-required" checked>
                                <label class="form-check-label" for="anchor-required">Required Anchor</label>
                            </div>
                            <div class="alert alert-success" id="anchor-position-note">
                                <small>
                                    <i class="fa fa-anchor me-1"></i>
                                    <strong>Position:</strong> Area selected by drawing on PDF. Drag the anchor to fine-tune position.
                                </small>
                            </div>
                            <div class="alert alert-info" id="anchor-edit-note" style="display: none;">
                                <small>
                                    <i class="fa fa-info-circle me-1"></i>
                                    <strong>Position:</strong> Drag the anchor on the PDF to adjust its position.
                                </small>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="save-anchor">
                    <i class="fa fa-anchor me-1"></i>Save Anchor
                </button>
            </div>
        </div>
    </div>
</div>
 
<!-- Bulk Fields Modal -->
<div class="modal fade" id="bulk-fields-modal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="bulk-modal-title">Bulk Fields - Edit Text</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info">
                    <i class="fa fa-info-circle me-1"></i>
                    <strong>Instructions:</strong> Edit the field names below (one per line). Fields will be created with equal height in the selected area.
                </div>
                <div class="mb-3">
                    <label class="form-label">Extracted Text <small class="text-muted">(<span id="bulk-line-count">0</span> lines found)</small></label>
                    <textarea class="form-control" id="bulk-extracted-text" rows="10"
                              placeholder="Field names will appear here..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="create-bulk-fields" onclick="createBulkFields()">
                    <i class="fa fa-magic me-1"></i>Create Fields
                </button>
            </div>
        </div>
    </div>
</div>
 

<style>
    .field-overlay.selected {
        border-color: #FF375E !important;
        background: rgba(255,55,94,0.2) !important;
    }

